{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        // Añade estas 3 configuraciones
        "target": "ESNext",
        "moduleResolution": "NodeNext", 
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        // Añade estas 2 configuraciones para los decoradores definidos en el modelo
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },

    "include": ["src/**/*.ts"]
}